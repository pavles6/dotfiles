{
  "icon_theme": "Material Icon Theme",
  "assistant": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4o"
    },
    "button": false,
    "version": "2"
  },
  "git": {
    "inline_blame": {
      "show_commit_summary": true
    }
  },
  "theme": "One Dark - Darkened",
  "when_closing_with_no_tabs": "keep_window_open",
  "soft_wrap": "editor_width",
  "vim_mode": true,
  "ui_font_family": "SF Compact",
  "ui_font_size": 20,
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "buffer_font_size": 20,
  "buffer_line_height": {
    "custom": 1.5
  },
  "vertical_scroll_margin": 15,
  "confirm_quit": true,
  "terminal": {
    "dock": "right",
    "env": {
      "EDITOR": "zed --wait"
    },
    "font_family": "JetBrainsMono Nerd Font"
  },
  "tabs": {
    "file_icons": true,
    "git_status": true,
    "show_diagnostics": "errors"
  },
  "project_panel": {
    "dock": "right",
    "scrollbar": {
      "show": "always"
    }
  },
  "buffer_font_features": {
    "calt": false
  },
  "telemetry": {
    "metrics": false,
    "diagnostics": false
  },
  "vim": {
    "use_system_clipboard": "always"
  }
}
