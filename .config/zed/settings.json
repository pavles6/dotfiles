{
  "theme": "One Dark - Darkened",
  "soft_wrap": "editor_width",
  "vim_mode": true,
  "ui_font_size": 20,
  "buffer_font_size": 20,
  "buffer_font_family": "IosevkaTerm Nerd Font",
  "ui_font_family": "Iosevka Aile",
  "vertical_scroll_margin": 8,
  "confirm_quit": true,
  "terminal": {
    "dock": "right",
    "env": {
      "EDITOR": "zed --wait"
    },
    "font_family": "IosevkaTerm Nerd Font"
  },
  "tabs": {
    "file_icons": true,
    "git_status": true
  },
  "project_panel": {
    "dock": "right",
    "scrollbar": {
      "show": "always"
    }
  },
  "buffer_font_features": {
    "calt": false
  },
  "telemetry": {
    "metrics": false,
    "diagnostics": false
  },
  "vim": {
    "use_system_clipboard": "never"
  }
}
